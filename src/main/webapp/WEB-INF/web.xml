<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Ford Test Web Application</display-name>
  <description> application which tests my capablities here.</description>

  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>ford.dallen.webproject.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>GetSetpointsServlet</servlet-name>
  	<servlet-class>ford.dallen.webproject.GetSetpointsServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>GetStatusServlet</servlet-name>
  	<servlet-class>ford.dallen.webproject.GetStatusServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SetTemperatureServlet</servlet-name>
  	<servlet-class>ford.dallen.webproject.SetTemperatureServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SetStatusServlet</servlet-name>
  	<servlet-class>ford.dallen.webproject.SetHeaterServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>GetSetpointsServlet</servlet-name>
  	<url-pattern>/setpoints</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>GetStatusServlet</servlet-name>
  	<url-pattern>/status</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>SetTemperatureServlet</servlet-name>
  	<url-pattern>/settemp</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>SetStatusServlet</servlet-name>
  	<url-pattern>/setstatus</url-pattern>
  </servlet-mapping>
  
</web-app>
